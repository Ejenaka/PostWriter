@model Tuple<TestWebApplication.Models.Post, TestWebApplication.Models.Comment>

@{
    ViewBag.Title = Model.Item1.Title;
}

<div class="post__content">
    <h1>@Model.Item1.Title</h1>
    <h4>
        <small>
            @Html.ActionLink(Model.Item1.AuthorID.ToString(), "Details", "Users"),
            @Model.Item1.PublicationDate
        </small>
    </h4>
    <p>@Model.Item1.Themes</p>
    <div>@Html.Raw(Model.Item1.Content)</div>
    @if (Session["UserID"] != null)
    {
        if (!Model.Item1.LikedUsers.Where(u => u.ID == (int)Session["UserID"]).Any())
        {
            <a class="like-button btn btn-success" href="/Posts/Like/@Model.Item1.ID">
                <span class="glyphicon glyphicon-thumbs-up"></span>
                <p>Like</p>
            </a>
        }
        else
        {
            <a class="like-button btn btn-danger" href="/Posts/Like/@Model.Item1.ID">
                <span class="glyphicon glyphicon-thumbs-down"></span>
                <p>Dislike</p>
            </a>
        }

    }
    <div class="post__info well well-sm">
        <div class="info__item">
            <span class="glyphicon glyphicon-eye-open"></span>
            <p>@Model.Item1.Views</p>
        </div>
        <div class="info__item">
            <span class="glyphicon glyphicon-thumbs-up"></span>
            <p>@Model.Item1.Likes</p>
        </div>
        <div class="info__item">
            <span class="glyphicon glyphicon-comment"></span>
            <p>0</p>
        </div>
    </div>
</div>

<div class="comment__controll">
    <div class="well">
        <h4>
            <span class="glyphicon glyphicon-comment"></span>
            Leave a Comment:
        </h4>
        @using (Html.BeginForm("AddComment", "Posts"))
        {
            <div class="form-group">
                 @Html.TextAreaFor(turple => turple.Item2.Content);
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <span class="glyphicon glyphicon-send"></span>
                    Submit
                </button>
            </div>
        }
    </div>
</div>
